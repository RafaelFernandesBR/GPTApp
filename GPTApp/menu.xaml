<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPTApp.menu"
             Title="Configurações">
    <StackLayout>
        <Button Text="Definir Token" Clicked="OnDefineTokenClicked" />
        <Button Text="Definir tamanho do histórico enviado" Clicked="OnDefineChatSizeClicked" />
        <StackLayout Orientation="Horizontal" Margin="0,30,0,0">
            <Label Text="Vibrar ao limpar a lista" VerticalOptions="Center"/>
            <CheckBox x:Name="VibrationCheckbox" VerticalOptions="Center" Margin="10,0,0,0" 
          CheckedChanged="OnVibrationCheckboxCheckedChanged" />
        </StackLayout>
        <Button Text="Visualizar logs de erros" Clicked="OnViewLogsClicked" />
    </StackLayout>
</ContentPage>
